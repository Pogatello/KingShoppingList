@model KingShoppingList.Model.ListItem

@{
    ViewData["Title"] = "Delete";
}



<div>

    <h3>Are you sure you want to delete @Model.Product.Name from @Model.ShoppingList.Name ?</h3>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
