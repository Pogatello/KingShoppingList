@model KingShoppingList.Model.ShoppingCart


<h1>Your Cart</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Quantity
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListItems)
            {
                <tr>
                    <td>
                        <h2>@item.Product.Name</h2>
                    </td>
                    <td>
                        <h2>@item.Quantity</h2>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>