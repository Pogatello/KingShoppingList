@model KingShoppingList.Model.ShoppingList

@{
    ViewData["Title"] = "Delete";
}



<h1>Are you sure you want to delete this shopping list?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Shopping List
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Published
        </dt>
        <dd class="col-sm-10">
            @if (Model.published == true)
            {
                <span>Yes</span>
            }
            else { <span>No</span>}
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 

    </form>
    <br />
    <a asp-action="Index">Back to List</a>
</div>
